# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=your_database_url_here

# JWT Secret (generate a secure secret for production)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (Required for email services)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Admin Configuration (Required for admin user creation in seeders)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=your_secure_admin_password_here

# AI Chat Configuration
# Get your Gemini API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# API Keys
API_KEY=your_api_key_here

# Moderation Configuration
MODERATION_REOPEN_THRESHOLD=2
MODERATION_REOPEN_COOLDOWN_HOURS=24
MODERATION_RATE_LIMIT_PER_HOUR=10
MODERATION_RATE_LIMIT_SAME_CONTENT_HOURS=72
