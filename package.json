{
  "name": "farm-connect-backend",
  "version": "1.0.0",
  "description": "Backend API for Farm Connect - Precision Pig Farming Application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "test": "jest --runInBand",
    "lint": "echo \"Linting not configured yet\"",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "seed:discussions": "ts-node src/scripts/seed_discussions.ts",
    "media:migrate": "ts-node src/scripts/migrate_media_to_cloudinary.ts",
    "media:thumbs": "ts-node src/scripts/backfill_cloudinary_thumbnails.ts",
    "leaderboard:snapshot": "ts-node src/scripts/leaderboard_snapshot.ts"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "api",
    "farm",
    "agriculture",
    "pig-farming"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.23",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.11",
    "supertest": "^7.1.1",
    "@types/supertest": "^2.0.16"
  }
}
